@{
    ViewBag.Title = "Cobrar Mesa";
    Layout = null;

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Cobrar Pedido</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f7f4d4;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            padding: 20px;
            font-size: 36px;
            color: #333;
        }

        .order-container {
            width: 80%;
            max-width: 1000px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .order-info {
            text-align: center;
            margin-bottom: 20px;
        }

            .order-info h2 {
                margin: 0 0 5px 0;
                font-size: 24px;
            }

            .order-info p {
                margin: 0;
                font-size: 16px;
                color: #666;
            }

        .item-grid {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .item-card {
            position: relative;
            background-color: #fafafa;
            border: 1px solid #ccc;
            border-radius: 6px;
            padding: 10px;
            text-align: center;
            width: 150px;
        }

        .item-check {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .item-card img {
            display: block;
            margin: 0 auto 10px auto;
            width: 80px;
            height: 80px;
            object-fit: cover;
        }

        .item-card h3 {
            margin: 0 0 5px 0;
            font-size: 16px;
        }

        .note {
            font-size: 14px;
            color: #666;
        }

        .buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        button {
            background-color: #343a40;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #495057;
            }

        .dropdown-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-top: 20px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 300px;
        }
    </style>
</head>
<body>
    <h1>Cobrar Pedido</h1>

    <div class="order-container">
        <div class="order-info">
            <h2>Detalle de la Mesa</h2>
            <p>Pedido # @ViewBag.PedidoId</p>
            <p>Mesa # @ViewBag.NumeroMesa</p>
        </div>

        @using (Html.BeginForm("GenerarFactura", "Cajero", FormMethod.Post))
        {
            <input type="hidden" name="pedidoId" value="@ViewBag.PedidoId" />
            <input type="hidden" name="mesaNum" value="@ViewBag.NumeroMesa" />

            <div class="dropdown-container">
                <div class="form-group">
                    @Html.Label("TipoDePagoId", "Tipo de Pago:")
                    @Html.DropDownList("TipoDePagoId", (SelectList)ViewData["TiposDePago"], " ", new { @class = "form-control" })
                </div>
            </div>

            <div class="item-grid">
                @foreach (var item in ViewBag.DetallePedido)
                {
                    <div class="item-card">
                        <div class="item-check">
                            <input type="checkbox" name="selectedItems" value="@item.MenuItemId" />
                        </div>
                        <h3>@item.NombreItem</h3>
                        <p class="note">Descripción: @item.DescripcionItem</p>
                        <p class="note">Cantidad: @item.Cantidad</p>
                        <p class="note">Precio: $@item.Precio</p>
                        <p class="note">Subtotal: $@item.Subtotal</p>
                        <p class="note">Comentarios: @item.Comentarios</p>
                    </div>
                }
            </div>
            
            <div class="buttons">
                @Html.ActionLink("Generar Factura Total", "GenerarFactura", "Cajero", new { pedidoId = ViewBag.PedidoId, mesaNum = ViewBag.NumeroMesa }, new { @class = "btn" })<br />
                <button type="submit" class="btn">Generar Factura Individual</button>
            </div>
            <div>
                @Html.ActionLink("Regresar", "Index", "Cajero", new { @class = "btn" })
            </div>
        }

    </div>
</body>
</html>
