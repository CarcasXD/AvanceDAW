@{
    ViewBag.Title = "Cocina";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f9f3e1; /* Color de fondo similar al de la imagen */
        }

        .container {
            margin-top: 50px;
        }

        .card-header {
            font-size: 1.5rem;
            font-weight: bold;
            background-color: #f8f9fa;
        }

        .list-group-item {
            border: none;
            padding: 10px 20px;
            background-color: #ffffff;
        }

            .list-group-item:not(:last-child) {
                margin-bottom: 5px;
            }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
        }

        .card-body {
            background-color: #f8f9fa;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .star-icon {
            color: #ffcc00;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-5">Cocina</h1>
        <div class="row">
            <!-- Ordenes Solicitadas -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Solicitados
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var order in (List<AvanceDAW.Models.PedidoViewModel>)ViewData["Solicitadas"])
                            {
                                <div class="list-group-item">
                                    <span class="star-icon">&#9733;</span> <strong>Orden @order.ID_PEDIDO</strong><br />
                                    Mesa #@order.NumeroMesa
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ordenes en Proceso -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        En Proceso
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var order in (List<AvanceDAW.Models.PedidoViewModel>)ViewData["EnProceso"])
                            {
                                <div class="list-group-item">
                                    <span class="star-icon">&#9733;</span> <strong>Orden @order.ID_PEDIDO</strong><br />
                                    Mesa #@order.NumeroMesa
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
