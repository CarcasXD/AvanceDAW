@model AvanceDAW.Models.PEDIDO

@{
    ViewData["Title"] = "Detalles de la Orden";
}

<h1>Detalles de la Orden @Model.ID_PEDIDO</h1>

<p>Mesa: #@Model.Mesa.NumeroMesa</p>

<h3>Detalle del Pedido:</h3>
<ul>
    @foreach (var detalle in Model.DetallePedidos)
    {
        <li>
            @if (detalle.MenuItems.PlatoID != null)
            {
                <span>Plato: @detalle.MenuItems.Plato.Nombre</span>
            }
            else
            {
                <span>Combo: @detalle.MenuItems.Combo.Nombre</span>
            }
            <span> - Cantidad: @detalle.DET_CANTIDAD</span>
            <span> - Subtotal: @detalle.DET_SUBTOTAL</span>
        </li>
    }
</ul>
